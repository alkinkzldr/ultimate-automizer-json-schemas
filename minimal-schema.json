{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SARIF Schema",
  "type": "object",
  "required": [
    "version",
    "runs"
  ],
  "properties": {
    "version": {
      "type": "string",
      "enum": [
        "2.1.0"
      ]
    },
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "tool",
          "results"
        ],
        "properties": {
          "tool": {
            "type": "object",
            "required": [
              "driver"
            ],
            "properties": {
              "driver": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "rules": {
                    "description": "An array of reporting descriptor objects.",
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "id"
                      ],
                      "properties": {
                        "id": {
                          "description": "The stable, unique identifier of the rule.",
                          "type": "string"
                        },
                        "name": {
                          "description": "The name of the rule.",
                          "type": "string"
                        },
                        "shortDescription": {
                          "description": "A short description of the rule.",
                          "type": "object",
                          "properties": {
                            "text": {
                              "type": "string"
                            }
                          }
                        },
                        "fullDescription": {
                          "description": "A full description of the rule.",
                          "type": "object",
                          "properties": {
                            "text": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "results": {
            "description": "An array of result objects.",
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "ruleId",
                "message",
                "locations",
                "level"
              ],
              "properties": {
                "ruleId": {
                  "description": "The stable, unique identifier of the rule that was violated.",
                  "type": "string"
                },
                "message": {
                  "description": "A message that describes the result.",
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    }
                  }
                },
                "level": {
                  "description": "A value specifying the severity level of the result.",
                  "default": "warning",
                  "enum": ["note", "warning", "error"]
                },
                "locations": {
                  "description": "An array of one or more locations relevant to the result.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "physicalLocation": {
                        "type": "object",
                        "properties": {
                          "artifactLocation": {
                            "type": "object",
                            "properties": {
                              "uri": {
                                "type": "string"
                              }
                            }
                          },
                          "region": {
                            "type": "object",
                            "properties": {
                              "startLine": {
                                "type": "integer"
                              },
                              "startColumn": {
                                "type": "integer"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "codeFlows": {
                  "description": "An array of 'codeFlow' objects relevant to the result.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "threadFlows": {
                        "description": "An array of one or more unique threadFlow objects, each of which describes the progress of a program through a thread of execution.",
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "locations": {
                              "description": "A temporally ordered array of 'threadFlowLocation' objects, each of which describes a location visited by the tool while producing the result.",
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "message": {
                                    "description": "A message relevant to the threadflow location. - also arguments (?)",
                                    "type": "object",
                                    "properties": {
                                      "text": {
                                        "type": "string"
                                      }
                                    }
                                  },
                                  "location": {
                                    "description": "A location within a programming artifact.",
                                    "type": "object",
                                    "properties": {
                                      "physicalLocation": {
                                        "type": "object",
                                        "properties": {
                                          "artifactLocation": {
                                            "type": "object",
                                            "properties": {
                                              "uri": {
                                                "type": "string"
                                              }
                                            }
                                          },
                                          "region": {
                                            "type": "object",
                                            "properties": {
                                              "startLine": {
                                                "type": "integer"
                                              }
                                            }
                                          }
                                        }
                                      }
                                    }
                                  },
                                  "properties": {
                                    "description": "Key/value pairs that provide additional information about the threadflow location.",
                                    "type": "object",
                                    "properties": {
                                      "flowState": {
                                        "type": "object",
                                        "properties": {
                                          "expression": {
                                              "type": "string"
                                            },
                                            "value": {
                                              "type": "string"
                                            }
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
